<%= render 'layouts/header'%>
<div class="login-form">
  <h1>Login</h1>
  <%= form_for :session, url: session_path do |f| %>
      <%= f.text_field :email, class: "field", placeholder: "Email" %>
    </br>
      <%= f.password_field :password, class: "field", placeholder: "Password" %>
    <div class="field">
    <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit 'Login' %>
    </div>
  <% end %>
  <p>New to Eats? <%= link_to "Sign up now", signup_path %></p>
  <p>Sell your food! <a href="/users/new/cook">Sign up as a cook</a></p>
</div>
