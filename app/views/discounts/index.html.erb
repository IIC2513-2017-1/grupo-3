<p id="notice"><%= notice %></p>

<h1 class="view-subtitle" align="center">Discounts</h1>

<div align="center">
  <% @discounts.each do |discount| %>
    <% if discount.active? %>
      <% @dish = Dish.find(discount.dish_id) %>
      <%= render 'layouts/dish_item.html', dish: @dish%>
    <% end %>
  <% end %>
</div>
