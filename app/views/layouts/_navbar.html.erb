  <ul class="navbar">
    <li id="navbar"><a class="navbar-brand" href="./">Eats</a></li>
    <li id="navbar"><%= link_to 'Dishes', dishes_path %></li>
    <li id="navbar">
    <%= form_tag(dishes_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search , params[:search], placeholder: "Dish", class: "field" %></div>
