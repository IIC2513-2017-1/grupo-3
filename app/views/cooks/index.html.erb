<%= render 'layouts/navbar' %>
<p id="notice"><%= notice %></p>

<h1>Cooks</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Visible</th>
      <th>Email</th>
      <th>Password</th>
      <th>Password Confirmation</th>
      <th>Address</th>
      <th>Score</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Seal</th>
      <th>Birth date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cooks.each do |cook| %>
      <tr>
        <td><%= cook.first_name %></td>
        <td><%= cook.last_name %></td>
        <td><%= cook.visible %></td>
        <td><%= cook.email %></td>
        <td><%= cook.password %></td>
        <td><%= cook.password_confirmation %></td>
        <td><%= cook.address %></td>
        <td><%= cook.score %></td>
        <td><%= cook.phone %></td>
        <td><%= cook.gender %></td>
        <td><%= cook.seal %></td>
        <td><%= cook.birth_date %></td>
        <td><%= link_to 'Show', cook %></td>
        <td><%= link_to 'Edit', edit_cook_path(cook) %></td>
        <td><%= link_to 'Destroy', cook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cook', new_cook_path %>
