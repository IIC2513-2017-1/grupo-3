<%= form_for(cook) do |f| %>
  <% if cook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cook.errors.count, "error") %> prohibited this cook from being saved:</h2>

      <ul>
      <% cook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name, 'Nombre'%>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, 'Apellido'%>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email, 'Email'  %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
      <%= f.label :password, 'Contraseña' %><br>
      <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="field">
  <%= f.label :password_confirmation, 'Confirma tu contraseña' %><br>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :address, 'Dirección' %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone, 'Teléfono' %>
    <%= f.telephone_field :phone %>
  </div>

  <div class="field">
    <%= f.label :gender, 'Género' %>
    <%= f.select :gender, options_for_select([['M', 'Male'], ['F', 'Female']]), :prompt => "Seleccionar", :class => 'genForm_dropBox' %>
  </div>

  <div class="field">
    <%= f.label :birth_date %>
    <%= f.date_select :birth_date, :start_year=>1910 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
