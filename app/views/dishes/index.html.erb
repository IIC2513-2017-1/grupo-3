<% if @recipes.blank? && @dishes.size <= 0 %>

    <h4>There are no dishes avaliable at this moment.</h4>

<% else%>
  <% @dishes.each do |dish| %>
    <div class="dish-display" >
      <h4 id="dish-show"><%= dish.name %></h4><p id="dish-show">by <%= dish.user.first_name %> <%= dish.user.last_name %></p>
      <p class="text-right">Price: <span style="color: green"><%= number_to_currency dish.price %></span></p>
      <p><%= dish.description %></p>
      <p>
      Tags: <%= raw dish.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
      </p>

      <div class="dish-buttons">
        <%= button_to 'Show', dish_path(dish), :id => "dish-button" %>
        <%= button_to 'Add to Cart', cart_items_path(dish_id: dish.id), :id => "dish-button"%>
      </div>
    </div>
  <% end %>
<% end %>
<div class="new-dishes-button">
  <%= button_to 'New Dish', new_dish_path, :method => :get, :id => "button" %>
</div>
